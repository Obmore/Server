<%- include('header') -%>
<%- include('menu') -%>
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Stations</h2>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Serial Number</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                <% stations.forEach(function(station){ %>
                    <tr>
                        <td><%= station.serial_number %></td>
                        <td><%= station.name ? station.name : 'N/A' %></td>
                        <td><%= station.address %></td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="/scooter/<%= station._id %>" class="btn btn-sm btn-success">Scooters</a>
                            <a href="/station/edit/<%= station._id %>" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                            <a href="/station/del/<%= station._id %>" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
            <a href="/station/new" class="btn btn-block btn-primary">Add new station</a>
        </div>
    </div>
</div>
<%- include('footer') -%>
