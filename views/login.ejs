<%- include('header') -%>
<div class="container">
    <div class="jumbotron">
        <h1>Welcome to Roller Stations</h1>
        <p>Your ultimate destination for quality rollers.</p>
        <a class="btn btn-primary" href="https://elektromos-roller.arukereso.hu/?gclid=Cj0KCQjw06-oBhC6ARIsAGuzdw3lpFVTNqcSA67tWEqayMKu0BnCBwwdz4wpgWat-GhX8rb5FGlTep4aAmg6EALw_wcB">Explore</a>
    </div>
    <div class="row">
        <div class="col-8">
            <h2>About Roller Stations</h2>
            <p>Roller Stations is a leading provider of high-quality rollers for your commuting and leisure needs.</p>
            <p>We offer a wide range of roller types and brands to choose from.</p>
        </div>
        <div class="col-4">
            <h2>Sign In</h2>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <input type="submit" class="btn btn-primary" value="Sign in"/>
            </form>
        </div>
    </div>
</div>
<%- include('footer') -%>
