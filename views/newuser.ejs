<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">User Registration</h2>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <div class="social-login">
                <button class="btn btn-primary btn-block" onclick="googleLogin()">Register with Google</button>
                <button class="btn btn-secondary btn-block" onclick="appleLogin()">Register with Apple</button>
                <button class="btn btn-danger btn-block" onclick="facebookLogin()">Register with Facebook</button>
            </div>
            <hr>
            <form method="post">
                <div class="form-group">
                    <label for="email">Email Address (Optional if using social login)</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Password (Optional if using social login)</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group">
                    <label for="given_name">Given Name</label>
                    <input type="text" class="form-control" id="given_name" name="given_name">
                </div>
                <div class="form-group">
                    <label for="family_name">Family Name</label>
                    <input type="text" class="form-control" id="family_name" name="family_name">
                </div>
                <div class="form-group">
                    <label for="picture">Profile Picture URL (Optional)</label>
                    <input type="text" class="form-control" id="picture" name="picture">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                    <label class="form-check-label" for="terms">I accept the terms and conditions</label>
                </div>
                <br>
                <input type="submit" class="btn btn-primary" value="Register"/>
                <a class="btn btn-link" href="/">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>
