<%- include('header') -%>
<%- include('menu') -%>
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Roller Stations</h2>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Address</th>
                    <th>Id</th>
                    <th>Capacity</th>
                    <th>&nbsp;</th>
                </tr>
                <% rollerstations.forEach(function(Rollerstation){ %>
                    <tr>
                        <td>
                            <%= Rollerstation.address %>
                        </td>
                        <td>
                            <%= Rollerstation.id %>
                        </td>
                        <td>
                            <%= Rollerstation.capacity %>
                        </td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="/roller/<%= Rollerstation._id %>" class="btn btn-sm btn-success">Rollers</a>
                            <a href="/rollerstation/edit/<%= Rollerstation._id %>" 
                                class="btn btn-sm btn-primary"><i
                                        class="far fa-edit"></i></a>
                            <a href="/rollerstation/del/<%= Rollerstation._id %>" 
                                class="btn btn-sm btn-danger"><i
                                        class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>
            </table>
            <a href="/rollerstation/new" class="btn btn-block btn-primary">Add new station</a>
        </div>
    </div>
</div>
<%- include('footer') -%>