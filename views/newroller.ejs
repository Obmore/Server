<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Roller
                <% if (typeof roller === 'undefined') { %>
                    Add new
                <% } else { %>
                    Edit
                <% } %>
            </h2>
            <small>Roller Station: <%= rollerstation.address %></small>
            <hr/>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post">
                <div class="form-group">
                    <label for="type">Type</label>
                    <input type="text" class="form-control" id="type" name="type"
                            value="<%= (typeof roller === 'undefined') ? '' : roller.type %>">
                </div>
                <div class="form-group">
                    <label for="id">Id</label>
                    <input type="text" class="form-control" id="id" name="id"
                            value="<%= (typeof roller === 'undefined') ? '' : roller.id %>">
                </div>
                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input type="text" class="form-control" id="brand" name="brand"
                            value="<%= (typeof roller === 'undefined') ? '' : roller.brand %>">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="text" class="form-control" id="price" name="price"
                            value="<%= (typeof roller === 'undefined') ? '' : roller.price %>">
                </div>
                <div class="form-group">
                    <label for="available">Available</label>
                    <div class="form-check form-check-lg">
                        <input type="checkbox" class="form-check-input" id="available" name="available" 
                        <% if (typeof roller !== 'undefined' && roller.available) { %>checked<% } %>>
                        <label class="form-check-label" for="available">Yes, it's available</label>
                    </div>
                </div>                         
                <input type="submit" class="btn btn-primary" value="Save"/>
                <a class="btn btn-link" href="/roller/<%= rollerstation._id %>">Cancel</a>
            </form>
        </div>
    </div>
</div>
<%- include('footer') -%>
