<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Start New Rental Session</h2>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post">
                <div class="form-group">
                    <label for="user">User</label>
                    <select class="form-control" id="user" name="user">
                        <% users.forEach(function(user){ %>
                            <option value="<%= user.id %>"><%= user.given_name %> <%= user.family_name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="scooter">Available Scooter</label>
                    <select class="form-control" id="scooter" name="scooter">
                        <% scooters.forEach(function(scooter){ %>
                            <% if (scooter.available) { %>
                                <option value="<%= scooter.id %>"><%= scooter.brand %> - <%= scooter.type %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <input type="hidden" name="start_time" value="<%= new Date().toISOString() %>">
                <input type="submit" class="btn btn-primary" value="Start Rental"/>
                <a class="btn btn-link" href="/">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>
