<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Roller Station
                <% if (typeof rollerstation === 'undefined') { %>
                    Add new
                <% }else{ %>
                    Edit
                <% } %>
            </h2>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post">
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address"
                            value="<%= (typeof rollerstation === 'undefined') ? '' : rollerstation.address %>">
                </div>
                <div class="form-group">
                    <label for="id">Id</label>
                    <input type="text" class="form-control" id="id" name="id"
                            value="<%= (typeof rollerstation === 'undefined') ? '' : rollerstation.id %>">
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity</label>
                    <input type="text" class="form-control" id="capacity" name="capacity"
                            value="<%= (typeof rollerstation === 'undefined') ? '' : rollerstation.capacity %>"
                            readonly>
                </div>
                <input type="submit" class="btn btn-primary" value="Save"/>
                <a class="btn btn-link" href="/rollerstation">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>
