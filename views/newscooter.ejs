<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Scooter
                <% if (typeof scooter === 'undefined') { %>
                    Add new
                <% } else { %>
                    Edit
                <% } %>
            </h2>
            <small>Station: <%= station.name %></small>
            <hr/>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post">
                <div class="form-group">
                    <label for="tag_id">Tag ID</label>
                    <input type="text" class="form-control" id="tag_id" name="tag_id"
                            value="<%= (typeof scooter === 'undefined') ? '' : scooter.tag_id %>">
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" id="status" name="status">
                        <option value="IN_SERVICE" <% if (typeof scooter !== 'undefined' && scooter.status === 'IN_SERVICE') { %>selected<% } %>>In Service</option>
                        <option value="UNDER_MAINTENANCE" <% if (typeof scooter !== 'undefined' && scooter.status === 'UNDER_MAINTENANCE') { %>selected<% } %>>Under Maintenance</option>
                        <option value="IN_RENTAL" <% if (typeof scooter !== 'undefined' && scooter.status === 'IN_RENTAL') { %>selected<% } %>>In Rental</option>
                    </select>
                </div>
                <input type="submit" class="btn btn-primary" value="Save"/>
                <a class="btn btn-link" href="/scooter/<%= station._id %>">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>

