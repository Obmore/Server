<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Scooters at <%= station.address %> station:</h2>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Tag ID</th>
                    <th>Rental Session</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                <% scooters.forEach(function(scooter){ %>
                    <tr>
                        <td><%= scooter.tag_id %></td>
                        <td>
                            <a href="/scooter/<%= scooter._id %>/rental-session" class="btn btn-sm btn-info">
                                View Rental Session
                            </a>
                        </td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="/scooter/<%= station._id %>/edit/<%= scooter._id %>" class="btn btn-sm btn-primary">
                                <i class="far fa-edit"></i>
                            </a>
                            <a href="/scooter/<%= station._id %>/del/<%= scooter._id %>" class="btn btn-sm btn-danger">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
            <br/>
            <a href="/scooter/<%= station._id %>/new" class="btn btn-block btn-primary">Add new scooter</a>
        </div>
    </div>
</div>
<%- include('footer') -%>

