<%- include('header') -%>
<%- include('menu') -%>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Rollers of <%= rollerstation.address %> station:</h2>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Id</th>
                    <th>Brand</th>
                    <th>Price $/Min</th>
                    <th>Available</th>
                    <th>&nbsp;</th>
                </tr>
                <% rollers.forEach(function(Roller){ %>
                    <tr>
                        <td>
                            <%= Roller.type %>
                        </td>
                        <td>
                            <%= Roller.id %>
                        </td>
                        <td>
                            <%= Roller.brand %>
                        </td>
                        <td>
                            <%= Roller.price %>
                        </td>
                        <td>
                            <% if (Roller.available) { %>
                                Yes
                            <% } else { %>
                                No
                            <% } %>
                        </td>
                        <td style="width:30px;white-space: nowrap">
                            <a href="/roller/<%= rollerstation._id %>/edit/<%= Roller._id %>"
                               class="btn btn-sm btn-primary"><i
                                        class="far fa-edit"></i></a>
                            <a href="/roller/<%= rollerstation._id %>/del/<%= Roller._id %>"
                               class="btn btn-sm btn-danger"><i
                                        class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>
            </table>
            <br/>
            <a href="/roller/<%= rollerstation._id %>/new" class="btn btn-block btn-primary">Add new roller</a>
        </div>
    </div>
</div>
<%- include('footer') -%>
